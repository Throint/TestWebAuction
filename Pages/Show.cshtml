        <input type="text" asp-for=ToFound />
        <input type="submit" value="Found!"/>

    </form>
<div>
    @if( TempData["Name"]!=null)
    {
         <p>@TempData["Name"]</p>

    }
    @if(User.Identity.IsAuthenticated)
    {
        <a href="/Logout"> Log out</a>
        
    }
  
</div>
